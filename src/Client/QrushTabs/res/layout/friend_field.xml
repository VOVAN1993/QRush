<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_field_height"
    android:background="@color/white"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal" >

   <FrameLayout
       android:id="@+id/friend_avatar_fl"
        android:layout_width="@dimen/search_frames_width"
        android:layout_height="@dimen/search_frames_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@color/gray" >

        <ImageView
            android:id="@+id/friend_icon"
            android:layout_width="@dimen/search_iv_width"
            android:layout_height="@dimen/search_iv_height"
            android:layout_gravity="center"
            android:src="@drawable/qrcat" />
    </FrameLayout>

    <TextView
        android:id="@+id/friend_report_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
         android:layout_gravity="center_vertical"
        android:textSize="18sp" >
    </TextView>
    <TextView
        android:id="@+id/friend_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/friend_avatar_fl"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="Имя"
        android:textSize="@dimen/search_tv_name_fs" >
    </TextView>
    <TextView
        android:id="@+id/friend_city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/friend_avatar_fl"
        android:text="Город"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/friend_username_tv"
        android:layout_marginTop="2dp"
        android:textSize="@dimen/search_tv_city_fs" >
    </TextView>

