<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

<!--     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Введите имя для поиска:" /> -->
	<TextView
                android:id="@+id/friends_search_report_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/red" />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="10dp"
	    >
	    <EditText
        android:id="@+id/name_for_search_tv"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
         android:singleLine="true"
         android:padding="4dp"
        android:background="@color/white"
        android:hint="Введитя имя..."/>
    <Button 
        android:id="@+id/friends_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/search_friendsbtn"
        android:text=""/>
	</LinearLayout>
    

  <ListView
        android:id="@+id/friends_search_list"
         android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
  	    android:dividerHeight="10.0sp"
  	    android:layout_marginLeft="10dp"
  	    android:layout_marginRight="10dp"
   	    android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:cacheColorHint="@color/transparent">
    </ListView> 

</LinearLayout>